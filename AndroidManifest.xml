<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.us.sports4u"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <!-- Creating Permission to receive Google Maps -->
    <permission
            android:name="edu.us.sports4u.map.permission.MAPS_RECEIVE"
            android:protectionLevel="signature" />

    <!-- Permission to receive Google Maps -->
    <uses-permission android:name="edu.us.sports4u.mappermission.MAPS_RECEIVE" />

    <!-- Maps API needs OpenGL ES 2.0. -->
    <uses-feature
            android:glEsVersion="0x00020000"
            android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Sports4U"
        android:theme="@style/AppTheme" >

        <uses-library android:name="com.google.android.maps" />
        <activity android:name="edu.us.sports4u.activities.autorization.LogInActivity" />
        <activity android:name="edu.us.sports4u.activities.autorization.SignUpActivity"  />
        <activity android:name="edu.us.sports4u.activities.ListEventActivity" android:label="Sport Events" />
        <activity android:name="edu.us.sports4u.activities.ChooseKindOfSportActivity" android:label="Sports4U" />
        <activity android:name="edu.us.sports4u.activities.CreateEventActivity" android:label="Sports4U" />
        <activity android:name="edu.us.sports4u.activities.DetailEventActivity" android:label="Sports4U" />
        <activity android:name="edu.us.sports4u.activities.MainTabActivity" android:label="Sports4U" />
        <activity android:name="edu.us.sports4u.activities.maps.ChooseLocationOnMap" android:label="Sports4U" />


        <activity android:name="edu.us.sports4u.activities.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="edu.us.sports4u.activities.Interests"/>

        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="AIzaSyCvfqv87mHwj2bZzwEAhMbPGIqiQSeDO3c"/>

        <meta-data
                android:name="com.google.android.gms.version"
                android:value="@integer/google_play_services_version" />

    </application>

</manifest>
