<?xml version="1.0" encoding="utf-8"?>
<!-- the root view is now a LinearLayout, all other Views are children of this -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">
    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_app"
            >

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="15dp"

                >

            <EditText
                    android:id="@+id/txtSport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Sport"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:background="@drawable/edittext"
                    android:textColorHint="@color/grey"
                    android:inputType="text"
                    />

            <TextView android:id="@+id/textView5" android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:ems="10" android:hint="Name of your event" android:textColorHint="@color/blue"
                      android:layout_marginTop="10dp" android:textColor="#000" android:textSize="20dp"/>
            <EditText
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Title"
                    android:textColor="#9a808080"
                    android:textSize="20dp"
                    android:background="@drawable/edittext"
                    android:textColorHint="@color/grey"
                    android:inputType="text"
                    />
            <TextView
                    android:id="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Choose date and time"

                    android:textColorHint="@color/blue"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:textSize="20dp"
                    />

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    >


                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="8dp">

                    <ImageButton
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/imgbtnDay"
                            android:layout_weight="0.9"
                            android:src="@drawable/calendar"/>
                    <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Date"
                            android:layout_marginLeft="15dp"
                            android:textColor="#000"
                            android:textSize="20dp"
                            android:layout_weight="0.10"
                            />


                </LinearLayout>

                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="wrap_content" android:layout_weight="0.5"
                              android:layout_marginTop="10dp"
                              android:layout_marginBottom="10dp">
                    <ImageButton android:layout_width="fill_parent" android:layout_height="fill_parent"
                                 android:id="@+id/imgbtnClock" android:layout_weight="0.7"
                                 android:src="@drawable/clock"/>
                    <TextView android:id="@+id/tvTime" android:layout_width="match_parent"
                              android:layout_height="wrap_content" android:ems="10"
                              android:hint="Time"
                              android:layout_marginLeft="15dp"
                              android:textColor="#000" android:textSize="20dp" android:layout_weight="0.10"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="292dp"
                    android:layout_marginTop="10dp"
                    >
                <TextView
                        android:id="@+id/tvlocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Set event location"
                        android:textColorHint="@color/blue"
                        android:textColor="#000"
                        android:textSize="20dp"
                        />

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">


                    <EditText
                            android:id="@+id/txtAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Event location"
                            android:textColor="#000"
                            android:textSize="20dp"
                            android:background="@drawable/edittext"
                            android:textColorHint="@color/grey"
                            android:inputType="text"

                            android:layout_weight="0.3"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/textView7" android:layout_weight="0.3"/>
                    <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:id="@+id/imgLocation"
                            android:src="@drawable/location"
                            android:layout_weight="0.3" android:background="@drawable/buttons_style"/>

                </LinearLayout>
                <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Describe your event briefly"
                        android:textColorHint="@color/blue"
                        android:textSize="20dp"

                        android:layout_marginTop="15dp"
                        />

                <EditText
                        android:id="@+id/txtDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Describe your event"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:background="@drawable/edittext"
                        android:textColorHint="@color/grey"
                        android:inputType="textMultiLine"
                        android:lines="8"
                        android:minLines="4"
                        />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</RelativeLayout>